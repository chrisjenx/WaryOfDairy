- var menu = { 'Home': '/', 'Search': '/search', 'Blog': '/blog', 'Contact': '/contact' };

.container-fluid.blog-header
  nav.navbar.navbar-default(role='navigation')
    .container-fluid
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#nav-bar-collapse')
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Wary
      .navbar-right
        form(role='form', name="login", method="get", action="/users/login")
          button.btn.btn-link.navbar-btn(type="submit") Admin


      div#nav-bar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav
          each val, key in menu
            if selected === val
              li.active
                a(href=val, title=key)= key
            else
              li
                a(href=val, title=key)= key
