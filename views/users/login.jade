extends ../layout

block content
  h1= title

  form(role='form', name="login", method="post", action="#{path}")
    .form-group
      label(for='#inputUserName') Username/Email
      input#inputUserName.form-control(type="text", placeholder="Username/Email", name="username")

    .form-group
      label(for='#inputUserPassword') Password
      input#inputUserPassword.form-control(type="password", placeholder="Password", name="userpassword")

    button(type="submit").btn.btn-default Submit