extends ../layout

block content
  h1= title

  form(role='form', name="adduser", method="post", action="#{path}")
    .form-group
      label(for='#inputUserName') Username
      input#inputUserName.form-control(type="text", placeholder="Username", name="username")

    .form-group
      label(for='#inputUserEmail') Email address
      input#inputUserEmail.form-control(type="email", placeholder="Email address", name="useremail")

    .form-group
      label(for='#inputUserPassword') Password
      input#inputUserPassword.form-control(type="password", placeholder="Password", name="userpassword")

    button(type="submit").btn.btn-default Submit